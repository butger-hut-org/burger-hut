<!DOCTYPE html>
<html lang="en">
<%- include ("../includes/head") %> 
<body>
    <div class="container mt-5">
        <h1 class="text-center">Manage Orders</h1>
        <div class="mb-3">
            <input type="text" id="orderSearch" class="form-control" placeholder="Search Orders" onkeyup="filterOrders()">
        </div>        
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Products</th>
                    <th>Date</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody id="ordersTableBody"></tbody> 
        </table>
    </div>
    <div class="modal fade" id="editOrderModal" tabindex="-1" aria-labelledby="editOrderModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="editOrderModalLabel">Edit Order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <!-- Modal Body -->
                <div class="modal-body">
                    <form id="editOrderForm">
                        <!-- Products will be dynamically populated here -->
                    </form>
                </div>
                
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="submitEditOrder()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/public/js/mgmt/orderMgmt.js"></script> 
</body>
</html>