<!DOCTYPE html>
<html lang="he">
<head>
    <%- include('../includes/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Branch Locations</title>
    <link rel="stylesheet" href="/public/css/branches.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
</head>
<body>
    <%- include('../includes/header') %>

    <div class="container">
        <div id="branches">
            <div id="branchHeader">
                <h1 class="formtitle">Branches</h1>
            </div>
            <div id="branchList">
                <!-- Branch cards will be appended here by JavaScript -->
            </div>
        </div>
        <div id="map"></div>
    </div>
    <%- include('../includes/footer') %>
    <!-- Template for a branch card -->
    <script type="text/template" id="branchCard">
        <div class="branch-card">
            <h2>Branch Name: {name}</h2>
            <p>Address: {address}, {city}</p>
            <p>Phone number: {phoneNumber}</p>
            <p>Active: {active}</p>
        </div>
    </script>
    <script src="/public/js/branches.js"></script>
    <script src="/public/js/map.js"></script>
</body>
</html>
